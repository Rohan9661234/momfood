<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title> Tiffin Service </title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
            crossorigin="anonymous">
    </head>
    <body>

        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-center mt-5 alert alert-primary"
                        style="font-family: Arial, Helvetica, sans-serif;">
                        Tiffin
                        Service Data </h2>

                    <table class="table table-hover table-responsive
                        table-striped">
                        <thead>
                            <tr class="table-dark">
                                <th scope="col">No. </th>
                                <th scope="col">Name. </th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Tiffin</th>
                                <th scope="col">Location</th>
                                <th scope="col">Cost</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total Cost</th>
                                <th scope="col">From-Date</th>
                                <th scope="col">To-Date</th>
                                <th scope="col">Time</th>
                                <th scope="col">Address</th>
                                <th scope="col">Day</th>
                                <th scope="col">Form-Submit-Data</th>
                                <th scope="col">Response</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%usr.forEach((item, index)=> {%>
                                <tr>
                                    <th scope="row"><%= index+1 %></th>
                                        <td><%= item['name'] %></td>
                                        <td><%= item['email'] %></td>
                                        <td><%= item.phone %></td>
                                         <td><%= item.tiffin %></td>
                                         <td><%= item.location %></td>
                                        <td><%= item.cost %></td>
                                        <td><%= item.quantity %></td>
                                        <td><%= item.totalcost %></td>
                                        <td><%= new Date(item.fromdate) %></td>
                                        <td><%= new Date(item.todate) %></td>
                                        <td><%= item.time %></td>
                                        <td><%= item.address %></td>
                                        <td><%= item.day %></td>
                                        <td><%= item.SubmitDate %></td>
                                        <td>
                                            <% if ( item.response  == 'accept'){ %>
                                                Accept
                                            <% } else { %>

                                                <form action="/response/<%= item._id  %>" method="post">
                                                    <label>
                                                        <input type="radio" name="response" value="yes">
                                                        Accept
                                                      </label>
                                                       
                                                      <button class="btn btn-primary">Submit</button>
                                                </form>
                                            <% } %>
                                        </td>

                                    </tr>
                                <%})%>
                            </tbody>
                        </table>
                    </div>
                                                                        </div>
                                                                    </div>
                                                                    <script
                                                                        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
                                                                        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
                                                                        crossorigin="anonymous"></script>
                                                                </body>
                                                            </html>